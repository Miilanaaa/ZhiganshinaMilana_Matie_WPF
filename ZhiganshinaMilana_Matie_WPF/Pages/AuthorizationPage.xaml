<Page x:Class="ZhiganshinaMilana_Matie_WPF.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZhiganshinaMilana_Matie_WPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="815" d:DesignWidth="1570"
      Title="AuthorizationPage">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="2"
                   Grid.ColumnSpan="4"
                   Grid.Row="1"
                   Grid.RowSpan="2"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Text="АВТОРИЗАЦИЯ"
                   FontSize="40"
                   />
        <TextBlock Grid.Column="3"
                   Grid.ColumnSpan="2"
                   Grid.Row="3"
                   Grid.RowSpan="2"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Text="логин"
                   FontSize="42"
                   Margin="0 0 0 40"/>
        <TextBox x:Name="LoginTb" Grid.Column="3" Grid.ColumnSpan="2" Margin="55,13,34,16" Grid.Row="4"
                 />
        <TextBlock Grid.Column="3"
                   Grid.ColumnSpan="2"
                   Grid.Row="5"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Text="пароль"
                   FontSize="42"
                   Margin="0,26,0,0"/>
        <PasswordBox x:Name="PasswordTb" 
                 Grid.Column="3" 
                 Grid.ColumnSpan="2" 
                 Margin="55,29,34,0" 
                 Grid.Row="6"
                 />
        <Button x:Name="loginBtn"
                Content="Войти"
                FontSize="30"
                Grid.Column="2"
                Grid.Row="7" Click="loginBtn_Click"
                />
        <Button x:Name="RegBtn"
                Content="Зарегистрироваться"
                FontSize="30"
                Grid.Column="5"
                Grid.ColumnSpan="2"
                Grid.Row="7" 
                />

    </Grid>
</Page>
