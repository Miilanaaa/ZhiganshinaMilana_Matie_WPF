<Page x:Class="ZhiganshinaMilana_Matie_WPF.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZhiganshinaMilana_Matie_WPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="815" d:DesignWidth="1570"
      Title="HomePage">

    <Grid Background="White">
        <TextBlock Text="Матье"
                   FontSize="40"
                   Width="200"
                   Height="50" 
                   Margin="37,34,1333,731"/>
        <Image Source="/Images/Logo.png"
               Height="200" 
               Margin="37,92,1244,523"
               />
        <Button x:Name="CloseBt"
                Content="Закрыть"
                Width="200"
                Height="50"
                FontSize="30" 
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="20" Click="CloseBt_Click"
                />
        <Button 
                x:Name="MinimizedBt"
                Content="Свернуть"
                Width="200"
                Height="50"
                FontSize="30" 
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0 20 250 0" Click="MinimizedBt_Click"
                />
        <Button 
                x:Name="ExitBt"
                Content="Выход"
                Width="200"
                Height="50"
                FontSize="30" 
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Margin="20 0 0 20" Click="ExitBt_Click" 
                />
        <Button 
                x:Name="ServiceBt"
                Content="Услуги"
                Width="200"
                Height="50"
                FontSize="30" 
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Margin="20 0 0 100" 
                />
        <TextBox x:Name="NameTb"
                 Width="300"
                 Height="50"
                 HorizontalAlignment="Right"
                 Margin="20" TextChanged="NameTb_TextChanged"/>
        <ComboBox x:Name="FilterCb"
                  DisplayMemberPath="Name"
                  FontSize="25"
                  ItemsSource="{Binding statuses}"
                  Width="300"
                  Height="50"
                  HorizontalAlignment="Right"
                  Margin="0 150 20 0"
                  VerticalAlignment="Center">
            <ComboBox.ItemContainerStyle>
                <Style TargetType="ComboBoxItem">
                    <Setter Property="HorizontalContentAlignment" 
                            Value="Center"/>
                </Style>
            </ComboBox.ItemContainerStyle>
        </ComboBox>
        <Button Content="Кастом"
                Width="300"
                Height="50"
                FontSize="30"
                VerticalAlignment="Top"
                Margin="0 20 450 0"/>
        <Button Content="Косплей"
                Width="300"
                Height="50"
                FontSize="30"
                VerticalAlignment="Top"
                Margin="200 20 0 0"/>
        <ListView x:Name="ServiceLV"
                  d:ItemsSource="{d:SampleData ItemCount=25}"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Bottom"
                  Margin="405,0,0,150"
                  Width="800"
                  Height="550">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="1"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Border Background="#CDDCDF"
                                Width="750"
                                Height="220"
                                Margin="10 0 0 0"
                                CornerRadius="20">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{Binding Photo}" 
                                       Width="150"
                                       HorizontalAlignment="Left"
                                       Margin="50 5"/>
                                <StackPanel Orientation="Vertical"
                                            Width="460">
                                    <StackPanel Orientation="Horizontal"
                                                >
                                        <Border Width="3"
                                                Height="180"
                                                Background="Black"
                                                VerticalAlignment="Top"
                                                Margin="10 10 0 0"/>
                                        <StackPanel Orientation="Vertical">
                                            <TextBlock Text="Название услуги:"
                                                   Margin="10 10 0 0"
                                                   FontSize="25"/>
                                            <TextBlock Text="{Binding Name}"
                                                   Margin="10 10 0 0"
                                                   FontSize="20"/>
                                            <TextBlock Text="Описание услуги:"
                                                   Margin="10 10 0 0"
                                                   FontSize="25"/>
                                            <TextBlock Text="{Binding Description}"
                                                   Margin="10 10 0 0"
                                                   FontSize="20"/>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Price}"
                                                   Margin="10 10 0 0"
                                                   FontSize="25"/>
                                                <TextBlock Text="рублей."
                                                   Margin="10 10 0 0"
                                                   FontSize="25"/>
                                            </StackPanel>
                                            
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <StackPanel Margin="907,690,387,85"/>
        <StackPanel x:Name="NavSp"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,680,387,75" 
                    Width="196"/>
        <Button x:Name="ForwardBt"
                Content="←"
                FontSize="60"
                Width="100"
                Height="100" 
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0 0 200 100"
                />
        <Button x:Name="BackBt"
                Content="→"
                FontSize="60"
                Width="100"
                Height="100" 
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0 0 50 100"
                />
    </Grid>
</Page>
